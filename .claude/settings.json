      "Bash(gh release list:*)",
      "Bash(gh workflow:*)",
      "Bash(gh run list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr edit:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash ~/.claude/tmux-notify.sh",
            "async": true
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/bin/bash ~/.claude/tmux-clear.sh",
            "async": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ -f package.json ]] && grep -q typescript package.json 2>/dev/null; then npx tsc --noEmit --pretty 2>&1 | head -30; fi",
            "timeout": 30000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/bin/bash ~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "arx-dev-core@accelins-claude-code": true,
    "arx-hb-ui-kit@accelins-claude-code": true
  }
}
