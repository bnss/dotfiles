      "Bash(npm run lint:*)",
      "Bash(npm run format:*)",
      "Bash(npx svelte-check:*)",
      "Bash(npx svelte-kit sync:*)",
      "Bash(npx tsc:*)",
      "Bash(npx prettier:*)",
      "Bash(git -C /Users/bnss/Code/rx-frontend-wt/main show f92e75f03 --no-stat -p)",
      "Bash(git -C /Users/bnss/Code/rx-frontend-wt/main show f92e75f03 -p)",
      "Bash(git -C /Users/bnss/Code/rx-frontend-wt/fix-502-errors status --short)",
      "Bash(git -C /Users/bnss/Code/rx-frontend-wt/main status --short)",
      "Bash(git fetch:*)",
      "Bash(git -C /Users/bnss/Code/rx-frontend-wt/main fetch origin main)",
      "Bash(git -C /Users/bnss/Code/rx-frontend-wt/main log --oneline -1 origin/main)",
      "Bash(git pull:*)",
